<%= form_for @user do |u| %>
  <div class="form-group row mx-auto my-4">
    <%= u.label :name, class:"col-sm-1 col-form-label" %>
    <div class="col-sm-10">
      <%= u.text_field :name, required: true, class:"form-control" %>
    </div>
  </div>
  <div class="form-group row mx-auto my-4">
    <%= u.label :email, class:"col-1 col-form-label" %>
    <div class="col-sm-10">
      <%= u.text_field :email, required: true, class:"form-control" %>
    </div>
  </div>
  <div class="text-center my-4">
    <%= u.submit "Submit", class:"btn btn-primary" %>
  </div>
<%end%>