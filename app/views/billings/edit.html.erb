<main class="container">
  <h3 class="text-center">Edit Storage Details</h3>
  <%= form_for @billing do |b| %>
    <div class="form-group row mx-auto my-4">
      <%= b.label :client_name, class:"col-sm-auto" %>
      <div class="col-sm-10">
        <%= b.select :client_id, options_from_collection_for_select(@clients, "id", "name", @billing.client_id), {}, {disabled: true, class:"w-50"} %>
      </div>
    </div>
    <div class="form-group row mx-auto my-4">
      <div class="col-sm-6">
        <%= b.label :amonut %>
        <span class="ml-5"><%= s.number_field :amonut, required: true %></span>
      </div>
      <div class="col-sm-6">
        <%= s.label :buffer %>
        <span class="ml-5"><%= s.number_field :buffer, min: 0, required: true %></span>
      </div>
    </div>
    <div class="form-group row mx-auto my-4">
      <%= s.label :procurement_time, class:"ml-3" %>
      <span class="ml-4"><%= s.date_field :procurement_time, min: "2005-04-20", max: Date.today%></span>
    </div>
    <div class="text-center my-4">
      <%= s.submit "Submit", class:"btn btn-primary" %>
    </div>
  <% end %>
</main>