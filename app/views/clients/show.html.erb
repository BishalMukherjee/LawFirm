<main class="container">
  <table class="table table-borderless mt-4">
    <tr>
      <td>Client name:</td>
      <td><%= @client.name %></td>
    </tr>
    <tr>
      <td>Client Email:</td>
      <td><%= @client.email %></td>
    </tr>
    <tr>
      <td>Client's Services:</td>
      <td>
        <% if @services %>  
          <% @Services.each do |se| %>
            <li><%= se.name %></li>
          <% end %>
        <% end %>
      </td>
    </tr>
  </table>
</main>