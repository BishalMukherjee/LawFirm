<main class="container-fluid">
  <div class="text-center">
    <h3>Clients</h3>
  </div>
  <table class="table">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email ID</th>
    <tr>
    <% @clients.each do |c| %>
      <tr>
        <td><%= c.id %></td>
        <td><%= c.name %></td>
        <td><%= c.email %></td>    
        <td><%= link_to "Show", client_path(c) %></td>
        <td><%= link_to "Edit", edit_client_path(c) %></td>
        <td><%= link_to "Delete", client_path(c), method: :delete, data: {confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </table>
  <div class="text-center">
    <%= link_to "Add Client", new_client_path, class:"btn btn-primary my-5" %>
  </div>
</main>